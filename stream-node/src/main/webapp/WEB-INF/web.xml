	<listener>
		<listener-class>stream.node.StreamNodeContext</listener-class>
	</listener>

	<servlet>
		<servlet-name>DeploymentServlet</servlet-name>
		<servlet-class>stream.node.servlets.DeploymentServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>ContainerServlet</servlet-name>
		<servlet-class>stream.node.servlets.ContainerServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DocServlet</servlet-name>
		<servlet-class>stream.node.servlets.DocServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>WebShellServlet</servlet-name>
		<servlet-class>stream.node.shell.server.WebShellServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ContainerEditorService</servlet-name>
		<servlet-class>stream.node.shell.server.ContainerEditorServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ContainerService</servlet-name>
		<servlet-class>stream.node.shell.server.ContainerServiceImpl</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<servlet-class>stream.node.servlets.IndexServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>PageServlet</servlet-name>
		<servlet-class>stream.node.servlets.PageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeploymentServlet</servlet-name>
		<url-pattern>/api/deploy/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ContainerServlet</servlet-name>
		<url-pattern>/api/container/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DocServlet</servlet-name>
		<url-pattern>/doc/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>WebShellServlet</servlet-name>
		<url-pattern>/stream.node.shell.WebShell/web-shell</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ContainerEditorService</servlet-name>
		<url-pattern>/stream.node.shell.WebShell/container-editor</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ContainerService</servlet-name>
		<url-pattern>/stream.node.shell.WebShell/container-service</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>PageServlet</servlet-name>
		<url-pattern>/container.html</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/index.html</url-pattern>
	</servlet-mapping>
<!-- 
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
 -->
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>