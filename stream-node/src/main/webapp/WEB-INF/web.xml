 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Stream Node</display-name>
  

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext.xml
			/WEB-INF/applicationContext-security.xml
    	</param-value>
	</context-param>

