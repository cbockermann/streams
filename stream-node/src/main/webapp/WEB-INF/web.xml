	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
	</filter>
	
	<filter>
		<filter-name>strutsDisableFilter</filter-name>
		<filter-class>stream.node.servlets.DisableStruts2Filter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>strutsDisableFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>stream.node.StreamNodeContext</listener-class>
	</listener>

	<servlet>
		<servlet-name>DeploymentServlet</servlet-name>
		<servlet-class>stream.node.servlets.DeploymentServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>ContainerServlet</servlet-name>
		<servlet-class>stream.node.servlets.ContainerServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DocServlet</servlet-name>
		<servlet-class>stream.node.servlets.DocServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeploymentServlet</servlet-name>
		<url-pattern>/api/deploy/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ContainerServlet</servlet-name>
		<url-pattern>/api/container/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DocServlet</servlet-name>
		<url-pattern>/doc/*</url-pattern>
	</servlet-mapping>

