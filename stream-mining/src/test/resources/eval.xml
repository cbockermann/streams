<experiment import="stream.learner,stream.data.stats">

	<Stream id="input" class="stream.io.CsvStream" 
			    url="classpath:/multi-golf.csv.gz" />


	<Process input="input">
	
		<stream.data.mapper.MapKeys from="play" to="@label" />
	
		<ApplyModel ref="NaiveBayes" />
		<ApplyModel ref="RND" />
	
		<NaiveBayes id="NaiveBayes" />
		<RandomClassifier id="RND" />
	
		<stream.eval.PredError learner="NaiveBayes,RND" label="@label" />
		<!-- 
		 -->
		<Average keys="@error:NB,@error:RND" />
	
		<stream.plotter.LiveStreamPlotter keys="@error:NB,@error:RND" keepOpen="true" />
	
		<PrintData/>
		
		<stream.logic.Delay time="500ms"/> 
	
	</Process>

</experiment>