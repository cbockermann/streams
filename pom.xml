<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jwall</groupId>
	<artifactId>streams</artifactId>
	<name>streams</name>
	<version>0.9.7-SNAPSHOT</version>
	<packaging>pom</packaging>
	<description>The streams library is a multi-module library for processing data from data streams</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>

	<modules>
		<module>stream-api</module>
		<module>stream-core</module>
		<module>stream-runtime</module>
		<module>stream-plotter</module>
		<!-- <module>stream-node</module> <module>stream-runner</module> -->
		<module>stream-storm</module>
	</modules>

