
<Container import="stream.learner,stream.data.stats">


	<Stream id="input" class="stream.io.CsvStream"
		    url="classpath:/multi-golf.csv.gz" />


	<Process input="input">

		<MapKeys from="play" to="@label" />
	
		<Prediction ref="NaiveBayes" />
		
		<NaiveBayes id="NaiveBayes" />

		
		<stream.learner.evaluation.PredictionError learner="NaiveBayes" />
		
		<Sum keys="@error:NaiveBayes" />
		
		<stream.monitor.MemorySize ref="NaiveBayes" />
		
		<PrintData />
		
		<stream.flow.Delay time="100ms"  />
		
		<stream.plotter.LiveStreamPlotter keys="@error:NaiveBayes" history="100" />
		<stream.plotter.LiveStreamPlotter keys="@memory:NaiveBayes" history="100" />
		
	</Process>
	
</Container>